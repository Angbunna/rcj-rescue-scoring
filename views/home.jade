extends includes/layout

block vars
  - var ngAppDef = 'Home'

append scripts
  script(src='/javascripts/home.js')

block location
  a(href='/home' style="color:#333333") Home

block content
  .row
    .col-md-offset-2.col-md-8
      p RCJ Scoring System 2016 Edition
      if typeof(user) != "undefined"
        p 
          font(color="red") You are logged in as #{user.username} 
      button(onclick="location.href='/line'" class='button-s button-green') Rescue Line
      button(onclick="location.href='/maze'" class='button-s button-green') Rescue Maze
      if typeof(user) == "undefined"
        button(onclick="location.href='/login'" class='button-s button-yellow') Login
      else
        button(onclick="location.href='/logout'" class='button-s button-red') Logout
      br
      br
      br
      if typeof(user) != "undefined"
        if user.admin
            button(onclick="location.href='/admin'" class='button-s button-bb') Competition Management
