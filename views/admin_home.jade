//- -*- tab-width: 2 -*-
extends includes/layout

block vars
  - var ngAppDef = 'AdminHome'

append scripts
  script.
    var competitionId = "#{id}"
  script(src='/javascripts/admin_home.js')

block location
  a(href='/home' style="color:#333333") Home
  | >
  a(href='/admin' style="color:#333333") Admin

block content
  .row
    .col-md-offset-2.col-md-8
      h1 Competitions
      table
        tr(ng-repeat='competition in competitions')
          td
            a(ng-bind='competition.name' ng-href="/admin/{{competition._id}}" ng-click='removeRound(competition._id)')
          td
            a(href="" ng-click='removeRound(competition._id)') Delete

      h1 Add competition
      input(ng-model='competitionName')
      button(ng-click='addCompetition()') Add competition