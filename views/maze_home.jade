//- -*- tab-width: 2 -*-
extends includes/layout

block vars
  - var ngAppDef = 'MazeHome'

append scripts
  script.
    var competitionId = "#{id}"
  script(src='/javascripts/maze_home.js')

block location
  a(href='/home' style="color:#333333") Home
  | >
  a(href='/maze' style="color:#333333") Maze

block content
  .row
    .col-md-offset-2.col-md-8
      h1 RoboCup Junior - Rescue Maze

      h1 Competitions
      table
        tr(ng-repeat='competition in competitions')
          td
            a(ng-bind='competition.name' ng-href="/maze/{{competition._id}}")

